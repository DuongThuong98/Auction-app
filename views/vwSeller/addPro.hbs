{{#section 'js'}}

{{!-- Textarea cho mô tả chi tiết --}}
<script
    src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=ezd73nxbzc7bu6e86g2l82jbbffke0mwevwrnyvc5q8h89j6"></script>
<script>
    tinymce.init({
        selector: '#txtFullDes',
        height: 600,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
            'forecolor backcolor',
            'table link image media',
        ],
    });
</script>

{{!-- NGÀY THÁNG NĂM --}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    $('#txtDOE').datetimepicker({
        //format: 'd/m/Y H:s'
        format: 'd/m/Y H:m:s',
        timepicker: true,
        mask: true,
    });

    function validate() {
        return true;
    }
</script>

{{!-- upload file --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/themes/fa/theme.min.js"></script>
<script>
    $('#fuMain').fileinput({
        theme: 'fa',
        dropZoneEnabled: false,
        allowedFileExtensions: ['png', 'jpg', 'gif'],
    });
</script>
{{/section}}


<seticon class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-12 col-xs-12">
                <div class="page-content checkout-page">
                    <div class="page-title">
                        <h2>Thêm sản phẩm đấu giá</h2>
                    </div>
                    <form method="POST" name="frmAddProduct" novalidate enctype="multipart/form-data">
                        <div class="box-border">
                            <ul>
                                <li class="row">
                                    <div class="col-sm-6">
                                        <label for="first_name" class="required">Tên sản phẩm: </label>
                                        <input type="text" class="input form-control" name="p_name" id="first_name">
                                    </div>
                                    <!--/ [col] -->
                                    <div class="col-sm-6">

                                        <label for="txtDOE" class="required">Ngày hết hạn: </label>
                                        <input type="text" class="form-control" id="txtDOE" name="doe">

                                    </div>

                                    <!--/ [col] -->
                                </li>
                                <!--/ .row -->
                                <li class="row">
                                    <div class="col-sm-6">
                                        <label for="company_name">Gía khởi điểm: </label>
                                        <input type="text" name="current_bid" class="input form-control"
                                            id="company_name">
                                    </div>
                                    <!--/ [col] -->
                                    <div class="col-sm-6">
                                        <label for="email_address" class="required">Gía mua ngay:</label>
                                        <input type="text" class="input form-control" name="purchase_bid"
                                            id="email_address">
                                    </div>

                                </li>


                                <li class="row">

                                    <div class="col-sm-3">
                                        <label class="required">Loại:</label>
                                        <select class="input form-control" name="id_type">
                                            <option selected="true" disabled="disabled">Chọn </option>
                                            {{#each lcCategories}}
                                            {{#if mangcap2}}
                                            <option value="{{cap1.id}}">{{cap1.cate_name}}</option>
                                            {{#each mangcap2}}
                                            <option value="{{cap2_id}}">&nbsp;&nbsp;&nbsp;{{cap2_name}} </option>
                                            {{/each}}
                                            {{else}}
                                            <option value="{{cap1.id}}">{{cap1.cate_name}}</option>
                                            {{/if}}
                                            {{/each}}
                                        </select>
                                    </div>

                                    <div class="col-sm-3">
                                        <label class="required">Tự động kéo dài:</label>
                                        <select class="input form-control" name="auto_time_extend">
                                            <option selected="true" value="0">Không </option>
                                            <option value="1">Có </option>
                                        </select>
                                    </div>

                                    <div class="col-sm-6">
                                        <label for="fuMain" class="required">Ảnh: </label>
                                        <input id="fuMain" name="fuMain" type="file" multiple>
                                    </div>
                                </li>

                                <li class="row">
                                    <div class="col-xs-12">

                                        <label for="txtFullDes" class="required">Mô tả chi tiết</label>
                                        <textarea class="form-control" id="txtFullDes" name="detail"></textarea>

                                    </div>
                                    <!--/ [col] -->

                                </li><!-- / .row -->
                                <li>
                                    <a class="continue-btn" href="/seller/product"><i class="fa fa-arrow-left">
                                        </i>&nbsp;
                                        Trở về
                                        list</a>&nbsp;
                                    <button class="button"><i class="fa fa-check "></i>&nbsp; <span>THÊM</span></button>
                                </li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
    </section>