{{#section 'js'}}
<script type="text/javascript">

    jQuery(document).ready(function () {
        $('.password-group').hide();
        // console.log('a');
    });
    jQuery(document).ready(function () {
        $('#is_change_pass').click(function () {
            $('.password-group').toggle(500);
            // alert("fdf");
        })
    });

    function validate() {
        if ($('#is_change_pass').is(":checked")) {
            if ($('#old_password').val() == "" || 
                $('#new_password').val()=="" || 
                $('#re_new_password').val()!==$('#new_password').val() )
                {
                    alert("Nhập lại Password")
                return false;
                }
        }

        return true;
    }
</script>
{{/section}}


<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-9 col-xs-12">
{{#if this.err_message}}
{{this.err_message}}
{{/if}}
{{#if this.success_message}}
{{this.success_message}}
{{/if}}
                <!-- <div class="col-main col-sm-12 col-xs-12"></div> -->
                {{#if authUser}}
                <div class="page-content checkout-page">
                    <div class="page-title">
                        <h2>Checkout</h2>
                    </div>
                    <form onsubmit="return validate();" method="POST" id="frmEditInfo" name="frmEditInfo">
                        <div class="box-border">
                            <ul>
                                <li class="row">
                                    <div class="col-sm-6">
                                        <label for="first_name" class="required">UserName</label>
                                        <input type="text" class="input form-control" name="username" id="txtusername"
                                            value="{{authUser.username}}">
                                    </div>
                                    <!--/ [col] -->
                                    <div class="col-sm-6">
                                        <label for="last_name" class="required">Họ Tên</label>
                                        <input type="text" name="fullname" class="input form-control" id="txtfullname"
                                            value="{{authUser.fullname}}">
                                    </div>
                                    <!--/ [col] -->
                                </li>
                                <!--/ .row -->
                                <li class="row">
                                    <div class="col-sm-6">
                                        <label for="company_name">ID USER</label>
                                        <input type="text" name="id" readonly class="input form-control"
                                            id="phone_number" value="{{authUser.id}}">
                                    </div>
                                    <!--/ [col] -->
                                    <div class="col-sm-6">
                                        <label for="email_address" class="required">Email Address</label>
                                        <input type="text" class="input form-control" name="email" id="email_address"
                                            value="{{authUser.email}}">
                                    </div>
                                    <!--/ [col] -->
                                </li>
                                <!--/ .row -->
                                <li class="row">
                                    <div class="col-xs-12">
                                        <label for="address" class="required">Address</label>
                                        <input type="text" class="input form-control" name="address" id="address"
                                            value="{{authUser.address}}">
                                    </div>
                                </li><!-- / .row -->

                                <br>
                                <li class="row">

                                    <div class="checkbox">
                                        <label><input type="checkbox" id="is_change_pass" name="is_change_pass">
                                            Thay đổi mật khẩu</label>
                                    </div>
                                </li>


                                <div class="password-group" style="display: block;">
                                    <div class="form-group">
                                        <label class="control-label" for="old_password">Mật khẩu cũ</label>
                                        <div class="input-wrap">
                                            <input type="password" name="old_password" class="form-control"
                                                id="old_password" value="" autocomplete="off"
                                                placeholder="Nhập mật khẩu cũ">
                                            <span class="help-block"></span>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label class="control-label" for="new-password">Mật khẩu mới</label>
                                        <div class="input-wrap">
                                            <input type="password" name="new_password" class="form-control"
                                                id="new_password" value="" autocomplete="off"
                                                placeholder="Mật khẩu từ 6 đến 32 ký tự">
                                            <span class="help-block"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label" for="re_new_password">Nhập lại</label>
                                        <div class="input-wrap">
                                            <input type="password" name="" class="form-control"
                                                id="re_new_password" value="" autocomplete="off"
                                                placeholder="Nhập lại mật khẩu mới">
                                            <span class="help-block"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- end of password-group -->

                                <li>
                                    <button type="submit" class="button" id="change_info"><i
                                            class="fa fa-angle-double-right"></i>&nbsp;
                                        <span>Sửa thông tin</span></button>
                                </li>
                            </ul>
                        </div>

                    </form>
                </div>
                {{/if}}

            </div>
            <aside class="right sidebar col-sm-3 col-xs-12">
                <div class="sidebar-account block">
                    <div class="sidebar-bar-title">
